<% toolbar = Theme::Toolbar.new %>
<% toolbar.add_button 'Nuevo', new_customer_path, 'plus' %>
<% toolbar.add_button 'Lista', customers_path, 'view-list-alt' %>

<%= render '/layouts/block_header' %>

<%= card ['Customers', 'Listado'], toolbar do %>
  <script type="text/javascript">
   var commands = function(column, row) {
     var show_command = '<%= table_button 'Ver', customer_path('rowId'), 'eye' %>';
     var edit_command = '<%= table_button 'Editar', edit_customer_path('rowId'), 'edit' %>';
     var delete_command = '<%= table_button 'Eliminar', customer_path('rowId'), 'delete', {'redirect_to' => 'customers'}, 'command-delete' %>';

     return (show_command + edit_command + delete_command).replace(new RegExp('rowId', 'g'), row.id);
     };
  </script>
  <table id="data-table-command" class="table table-striped table-vmiddle">
    <thead>
      <tr>
        <th data-column-id="id" data-type="numeric">Id</th>

        <th data-column-id="treatment_type" >
          Treatment type
        </th>

        <th data-column-id="first_name" >
          First name
        </th>

        <th data-column-id="last_name" >
          Last name
        </th>

        <th data-column-id="nationality" >
          Nationality
        </th>

        <th data-column-id="state" >
          State
        </th>

        <th data-column-id="registration" >
          Registration
        </th>

        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Commands</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>

        <td><%= customer.treatment_type %></td>

        <td><%= customer.first_name %></td>

        <td><%= customer.last_name %></td>

        <td><%= customer.nationality %></td>

        <td><%= customer.state %></td>

        <td><%= customer.registration %></td>

        <td>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
