<% @header.title = 'Registros' %>

<%= render '/layouts/block_header' %>

<%= card ['Nuevo Usuario', 'Crear Usuario'] do %>

  <%= form_for(resource, builder: ThemeBuilder, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, label: :email %>

    <%= f.password_field :password, label: :clave %>

    <%= f.password_field :password_confirmation, label: 'Confirmar Clave' %>

    <%= f.submit 'Enviar' %>
  <% end %>
  <br/>
  <% render "devise/shared/links" %>

<% end %>
