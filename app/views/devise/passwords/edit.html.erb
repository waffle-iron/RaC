<% @header.title = 'Usuario' %>

<%= render '/layouts/block_header' %>

<%= card ['Cambio de clave', 'Cambie su clave para mayor seguridad'] do %>

<%= form_for(resource, builder: ThemeBuilder, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, :autofocus => true, label: 'Nueva clave' %>

  <%= f.password_field :password_confirmation, label: 'Confirme nueva clave' %>

  <%= f.submit "Enviar" %>
<% end %>
