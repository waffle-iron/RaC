<%= render '/layouts/block_header' %>

<%= card ['Tarifas', 'Detalles'], @toolbar do %>

  <%= card_text_field_readonly @rate.code, label: 'Codigo' %>
  <%= card_text_field_readonly @rate.from, label: 'Desde' %>
  <%= card_text_field_readonly @rate.to, label: 'A' %>
  <%= card_check_box @rate.is_active, label: 'Activo' %>
  <%= card_check_box @rate.is_offer, label: 'Oferta' %>
  <%= card_text_field_readonly @rate.commission_base, label: 'Comision base' %>

<% end %>

<%= card ['Grupos', 'con tramos'], @toolbar do %>
  <%= render partial: 'rate_group_list', locals: {rate: @rate} %>
<% end %>

<%= card ['Seguros', 'con Grupos'], @toolbar do %>
  <%= render partial: 'rate_insurance_list', locals: {rate: @rate, owner: @rate_owner } %>
<% end %>

<%= card ['Impuestos', ''], @toolbar do %>
  <%= render partial: 'rate_tax_list', locals: {rate: @rate } %>
<% end %>

<%= card ['Extras', ''], @toolbar do %>
  <%= render partial: 'rate_extra_list', locals: {rate: @rate } %>
<% end %>
