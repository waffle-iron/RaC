<p id="groups" class="anchor"></p>
<% groups = agreement.groups.pluck(:group) %>
<ul class="hi-menu-h">
  <% ('A'..'Z').each do |letter| %>
  <% color = groups.include?(letter) ? 'green' : 'red' %>
  <% link = mode == :show ? '' :  agreement_add_remove_group_path(agreement.id, letter ) %>
  <% unless color == 'red' and mode == :show %>
  <li>
    <h2><a href="<%=  link %>" style="<%= "color:#{color};" %>"<i><%= letter %></i></a></h2>
  </li>
  <% end %>
  <% end %>
</ul>
