<p id="insurances" class="anchor"></p>
<% insurances = agreement.insurances.pluck(:insurance_id) %>
<ul class="hi-menu-h">
  <% Insurance.order(:name).each do |insurance| %>
  <% color = insurances.include?(insurance.id) ? 'green' : 'red' %>
  <% link = mode == :show ? '' :  agreement_add_remove_insurance_path(agreement.id, insurance.id ) %>
  <% unless color == 'red' and mode == :show %>
  <li>
    <h2><a href="<%=  link %>" style="<%= "color:#{color};" %>"<i>[<%= insurance.name %>]</i></a></h2>
  </li>
  <% end %>
  <% end %>
</ul>
