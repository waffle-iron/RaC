<%= form_for(@sale_type, builder: ThemeBuilder) do |f| %>
  <% if @sale_type.errors.any? %>
    <hr/>
    <div class="has-error">
      <ul>
      <% @sale_type.errors.full_messages.each do |message| %>
        <li><i class="input-helper"><%= message %></i></li>
      <% end %>
      </ul>
    </div>
    <hr/>
  <% end %>

    <%= f.text_field :name, label: 'Nombre'%>
    <%= f.submit 'Enviar'%>
<% end %>
