<%= render '/layouts/block_header' %>

<p class="anchor" id="zones"></p>
<%= card ['Creando Reserva', '4 - Seleccion de Seguros'] do %>


  <%= form_for(@booking, builder: ThemeBuilder, url: @route) do |f| %>
    <% if @booking.errors.any? %>
      <hr/>
      <div class="has-error">
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><i class="input-helper"><%= message %></i></li>
          <% end %>
        </ul>
      </div>
      <hr/>
    <% end %>

    <%= render partial: 'form_locked', locals: {f: f} %>

    <p class="c-black f-500 m-b-5 ">Extras:</p>
    <%= render partial: 'extra_form', locals: {f: f} %>

    <p class="c-black f-500 m-b-5 ">Seguros:</p>
    <%= render partial: 'insurance_form', locals: {f: f} %>

    <%= f.submit 'Enviar' %>
  <% end %>
<% end %>
